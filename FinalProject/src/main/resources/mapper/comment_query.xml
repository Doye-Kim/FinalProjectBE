<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.finalpjt.comment.dao.CommentDao">
    
    <select id="getCommentsByPost" resultType="com.ssafy.finalpjt.comment.dto.CommentDto">
        SELECT * FROM comments WHERE postSeq = #{postSeq}
    </select>
    
    <insert id="insertComment" parameterType="com.ssafy.finalpjt.comment.dto.CommentDto">
        INSERT INTO comments (postSeq, commentContent, commentTime, userSeq) 
        VALUES (#{postSeq}, #{commentContent}, #{commentTime}, #{userSeq})
    </insert>
    
    <!--
    <update id="updateComment">
        UPDATE comments SET commentContent = #{commentContent}, commentTime = #{commentTime} 
        WHERE commentSeq = #{commentSeq}
    </update>
    -->
    
    <delete id="deleteComment" parameterType="int">
        DELETE FROM comments WHERE commentSeq = #{commentSeq}
    </delete>
</mapper>